{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIM Base Metadata Schema",
  "description": "JSON Schema for AIM base metadata.yaml files",
  "type": "object",
  "properties": {
    "com": {
      "type": "object",
      "properties": {
        "amd": {
          "type": "object",
          "properties": {
            "aim": {
              "type": "object",
              "properties": {
                "release": {
                  "type": "object",
                  "properties": {
                    "notes": {
                      "type": "string",
                      "description": "Release notes for this model version"
                    }
                  },
                  "required": ["notes"],
                  "additionalProperties": false
                },
                "description": {
                  "type": "object",
                  "properties": {
                    "full": {
                      "type": "string",
                      "description": "Full description of the model, its capabilities, and use cases",
                      "maxLength": 160
                    }
                  },
                  "required": ["full"],
                  "additionalProperties": false
                },
                "title": {
                  "type": "string",
                  "description": "Title of the AIM"
                }
              },
              "required": ["title"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["amd"],
      "additionalProperties": false
    },
    "org": {
      "type": "object",
      "properties": {
        "opencontainers": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "vendor": {
                  "type": "string",
                  "description": "Vendor/organization name"
                },
                "authors": {
                  "type": "string",
                  "description": "Authors of the image/model"
                },
                "licenses": {
                  "type": "string",
                  "description": "License information for the model"
                },
                "description": {
                  "type": "string",
                  "description": "Brief description of the image/model",
                  "maxLength": 160
                },
                "documentation": {
                  "type": "string",
                  "description": "URL to documentation or empty string"
                },
                "source": {
                  "type": "string",
                  "format": "uri",
                  "description": "Source repository URL"
                }
              },
              "required": ["vendor", "authors", "licenses", "description", "documentation", "source"],
              "additionalProperties": false
            }
          },
          "required": ["image"],
          "additionalProperties": false
        }
      },
      "required": ["opencontainers"],
      "additionalProperties": false
    }
  },
  "required": ["com", "org"],
  "additionalProperties": false
}
